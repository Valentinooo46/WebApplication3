@using AspnetCoreMvcFull.Models.ViewModels.Locations
@model HomeIndexViewModel
@{
    ViewData["Title"] = "Головна";
}

<div class="row g-6">
  <div class="col-12">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <div>
        <h4 class="mb-1">Доступні країни та міста</h4>
        <p class="text-muted mb-0">Актуальний перелік для всіх користувачів (редагування доступне лише адміністраторам).</p>
      </div>
      @if (Model.IsAdmin)
      {
        <a asp-area="Admin"
           asp-controller="Locations"
           asp-action="Index"
           class="btn btn-primary d-flex align-items-center gap-2">
          <i class="ri-command-line ri-20px"></i>
          <span>Адмін панель</span>
        </a>
      }
    </div>

    <div class="card">
      <div class="card-body">
        @if (!Model.Countries.Any())
        {
          <div class="alert alert-info mb-0">
            <i class="ri-information-line me-2"></i>
            Дані поки що відсутні. Адміністратор може додати країни та міста у відповідному розділі.
          </div>
        }
        else
        {
          foreach (var country in Model.Countries)
          {
            <div class="border rounded-3 p-4 mb-4 bg-body">
              <div class="d-flex justify-content-between flex-wrap gap-3">
                <div>
                  <h5 class="mb-1 d-flex align-items-center gap-2">
                    <i class="ri-earth-line text-primary"></i>
                    @country.Name
                  </h5>
                  <small class="text-muted">
                    @country.Cities.Count міст@(country.Cities.Count == 1 ? "о" : country.Cities.Count >= 5 ? "" : "а")
                  </small>
                </div>
              </div>
              <div class="mt-3">
                @if (!country.Cities.Any())
                {
                  <span class="badge bg-label-secondary">Міста ще не додані</span>
                }
                else
                {
                  <div class="d-flex flex-wrap gap-2">
                    @foreach (var city in country.Cities)
                    {
                      <span class="badge bg-label-primary d-inline-flex align-items-center gap-1">
                        <i class="ri-map-pin-line"></i>@city.Name
                      </span>
                    }
                  </div>
                }
              </div>
            </div>
          }
        }
      </div>
    </div>
  </div>
</div>
