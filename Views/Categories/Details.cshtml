@model WebApplication3.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="https://lohika.itstep.click/images/200_@Model.Image" alt="@Model.Title">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            <strong>Priority:</strong> @Model.Priority <br />
            <strong>UrlSlug:</strong> @Model.UrlSlug
        </p>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    </div>
</div>