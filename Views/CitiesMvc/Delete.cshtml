@model WebApplication3.DTOs.CityDto

@{
    ViewData["Title"] = "Delete City";
}

<h1>Delete City</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.CountryName</dd>

        <dt class="col-sm-2">Slug</dt>
        <dd class="col-sm-10">@Model.Slug</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>