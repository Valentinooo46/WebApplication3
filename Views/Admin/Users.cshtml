@model List<UserCardViewModel>

<h2>Адмін-панель: Користувачі</h2>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@user.UserName</h5>
                    <p class="card-text">Email: @user.Email</p>
                    <p class="card-text">Ролі: @string.Join(", ", user.Roles)</p>
                    <a asp-action="EditRoles" asp-route-id="@user.UserId" class="btn btn-primary">Редагувати ролі</a>
                </div>
            </div>
        </div>
    }
</div>